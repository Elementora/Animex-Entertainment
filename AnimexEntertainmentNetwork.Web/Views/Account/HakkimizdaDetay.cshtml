
@{
    ViewBag.Title = "HakkimizdaDetay";
    Layout = "~/Views/Shared/_AnimexEntertainmentAdmin.cshtml";
}



<center><h2>Hakkimizda Güncelleme Ekranı</h2></center>


<input type="hidden" value="@ViewData["HakkimizdaID"].ToString()" id="ID" name="ID" />

<div class="form-group">
    <div class="col-md-12">
        <div class="col-md-1">
            <label for="login-username"><i class="icon-user"></i> <b>Başlık:</b></label>
        </div>
        <div class="col-md-11">
            <input class="form-control" id="HakkimizdaBaslik" name="HakkimizdaBaslik" value="@ViewData["HakkimizdaBaslik"].ToString()" type="text">
        </div>
    </div>

    &nbsp;
    &nbsp;
    <div class="col-md-12">
        <div class="col-md-1">
            <label for="login-username"><i class="icon-user"></i> <b>İçerik Alanı:</b></label>
        </div>
        <div class="col-md-11">
            <textarea id="HakkimizdaAciklama" name="HakkimizdaAciklama">@ViewData["Hakkimizdaİcerik"].ToString()</textarea>
        </div>
    </div>
    &nbsp;
    &nbsp;

    <div class="col-md-12">
        <center><button type="button" onclick="hakkimizdaguncelle()" class="btn btn-success">Hakkımızda Güncelle</button>   <button class="btn" onclick="    geri()">Geri</button></center>
    </div>
</div>





<script type="text/javascript">CKEDITOR.replace("HakkimizdaAciklama") </script>

<script>
    var hakkimizdaguncelle = function () {


       


        var AboutUsID = $("#ID").val();

    var AboutUs_Title = $("#HakkimizdaBaslik").val();

    var AboutUs_Detail = CKEDITOR.instances.HakkimizdaAciklama.getData();

        var verigonder =
            {
                AboutUsID: AboutUsID,

                AboutUs_Title: AboutUs_Title,
    
                AboutUs_Detail: AboutUs_Detail,

            }
        $.ajax({
            type: "post",
            url: "/Account/hakkimizdaguncelle",
            data: verigonder,
            dataType: "json",

        }).done(function (data) {

            if (data == "ok") {

                alert("Güncellendi");

                location.reload();
            }
           


        });


}

    </script>